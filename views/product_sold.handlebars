<div class="container col-xs-12">
	<div class="navbar container btn-container col-xs-12">
		<div class="row col-xs-12">
		
			<button onclick="location.href='sales_history'" class="col-xs-3">
				Show Sales History
			</button>

			<button onclick="location.href='purchase_history'" class="col-xs-3">
				Show Purchase History
			</button>

			<button onclick="location.href='product_sold'" class="col-xs-3">
				Show Product Sold
			</button>

			<button onclick="location.href='categories'" class="col-xs-3">
				Show Categories
			</button>
		</div>
	</div>

<div class="cols-xs-10 shifter">
		
		<h2>Product Sold</h2>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Stock Item</th><th>No Sold</th>
				</tr>
			</thead>
		
			{{#data}}
				<tr>
					<td>{{product_name}}</td><td>{{no_sold}}</td><td><a href="product_sold/edit_product_sold/{{id}}">edit</a></td><td><a href="product_sold/delete_product_sold/{{id}}">delete</a></td>
				</tr>
			{{/data}}

		</table>
	</div>
</div>