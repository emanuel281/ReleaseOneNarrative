<!DOCTYPE html>
<html>
	<head>
		<title>Nelisa Spaza</title>
		<link rel="stylesheet" type="text/css" href="static/css/bootstrap.min.css">
		<link rel="stylesheet" type="text/css" href="static/css/main_page.css">
		<script src="static/js/jquery.min.js"></script>
		<script src="static/js/bootstrap.min.js"></script>
		<script src="static/js/handlebars.js"></script>
	</head>
	
	<body>

		<div class="nav navbar navbar-default navbar-fixed-top">
			<a href="/"><h1>Nelisa Spaza Shop</h1></a>
		</div>

		<div class="col-lg-4"></div>

		<div class="container  col-lg-4 glyphicon-log-in">
			<h1>Log In</h1>
			<form action="/login" method="POST">
				<div class="row">
					<label class="col-lg-3" for="user">Username</label>
					<input class="col-lg-4" type="username" placeholder="username" autocomplete="off" name="user" id="user">
				</div>
				<div class="row">
					<label class="col-lg-3" for="password">Password</label>
					<input class="col-lg-4" type="password" placeholder="password" name="password" id="password">
					{{#if message}}
						<p>{{message}}</p>
					{{/if}}
				</div>
				<input class="btn" type="submit" id="LogIn" value="Log In">
			</form>
			<form action="/sign_up" method="GET">
				<input type="submit" value="Register" class="btn">
			</form>
		</div>
	</body>
</html>