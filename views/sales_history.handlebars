<div class="container col-xs-12">
	<div class="navbar container btn-container col-xs-12">
		<div class="row col-xs-12">
		
			<button onclick="location.href='sales_history'" class="col-xs-3">
				Show Sales History
			</button>

			<button onclick="location.href='purchase_history'" class="col-xs-3">
				Show Purchase History
			</button>

			<button onclick="location.href='product_sold'" class="col-xs-3">
				Show Product Sold
			</button>

			<button onclick="location.href='categories'" class="col-xs-3">
				Show Categories
			</button>
		</div>
	</div>

<div class="cols-xs-1 shifter">
		
		<h2>Sales History</h2>
		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>Day</th><th>Date</th><th>stock item</th><th>No sold</th><th>Sales Price</th><th>Category</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<form action="sales_history/add_sales_history" method="POST">
						<td><input class="col-xs-12" type="text" name="day"></td>
						<td><input type="text" name="date"></td>
						<td><input class="col-xs-12" type="text" name="stock_item"></td>	
						<td><input type="number" name="no_sold"></td>
						<td><input type="text" name="sales_price"></td>	
						<td>
							<select name="{{category_name}}">
								{{#data}}
									<option value="{{category_name}}">{{category_name}}</option>
								{{/data}}
							</select>
						</td>
						<td colspan="2"><input class="col-xs-12" value="Save" type="submit"></td>
					</form>
				</tr>

				{{#data}}
					<tr>
						<td>{{day}}</td><td>{{date}}</td><td>{{stock_item}}</td><td>{{no_sold}}</td><td>{{sales_price}}</td><td>{{category_name}}</td><td><a href="sales_history/edit_sales_history/{{id}}">edit</a></td><td><a href="sales_history/delete_sales_history/{{id}}">delete</a></td>
					</tr>
				{{/data}}
			</tbody>
		</table>
	</div>
</div>